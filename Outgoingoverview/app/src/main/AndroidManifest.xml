<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.leand.outgoingoverview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.AddNewItemActivity"
            android:label="@string/label_addNewItem"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.OverviewListActivity"
            android:label="@string/label_overview"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.EditValueActivity"
            android:label="@string/label_editItem"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.ChangeCurrencyActivity"
            android:label="@string/label_changeCurrency"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.AddRepeatedOutgoingsActivity"
            android:label="@string/label_addRepeatedOutgoing"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.EditRepeatedOutgoingsActivity"
            android:label="@string/label_editRepeatedOutgoing"></activity>
    </application>

</manifest>