<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.MainActivity">

    <include
        android:id="@+id/toolbar_MainActivity"
        layout="@layout/toolbar_main_activity"></include>

    <!-- Calendar to add new Item -->
    <CalendarView
        android:id="@+id/calendarView_MainActivity_calendar"
        style="@style/general_Top_WrapContent"
        android:layout_gravity="center" />

    <!-- Layout for Total of Day -->
    <LinearLayout
        android:id="@+id/linearLayout_MainActivity_ValueDay"
        style="@style/general_Middle_WrapContent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Statment for Total Day: -->
        <TextView
            android:id="@+id/textView_MainActivity_SelectedDatValueStatment"
            style="@style/general_WrapContent"
            android:textStyle="bold"
            android:text="@string/statement_totalDay" />

        <!-- TextView to show Value of the Day -->
        <TextView
            android:id="@+id/textView_MainActivity_SelectedDateValue"
            style="@style/general_WrapContent"
            android:textStyle="bold"
            android:text="TotalValueofDay" />
    </LinearLayout>

    <!-- Layout for Total of Month -->
    <LinearLayout
        android:id="@+id/linearLayout_MainActivity_ValueMonth"
        style="@style/general_Middle_WrapContent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Statment for Total Month: -->
        <TextView
            android:id="@+id/textView_MainActivity_TotalValueMonthStatement"
            style="@style/general_WrapContent"
            android:textStyle="bold"
            android:text="@string/statement_totalMonth" />

        <!-- TextView to show total value of the month -->
        <TextView
            android:id="@+id/textView_MainActivity_totalValueMonth"
            style="@style/general_WrapContent"
            android:textStyle="bold"
            android:text="TotalValueofMonth" />
    </LinearLayout>


    <!-- Layout for Total of Year -->
    <LinearLayout
        android:id="@+id/linearLayout_MainActivity_ValueYear"
        style="@style/general_Middle_WrapContent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Statment for Total Year: -->
        <TextView
            android:id="@+id/textView_MainActivity_TotalValueYearStatement"
            style="@style/general_WrapContent"
            android:textStyle="bold"
            android:text="@string/statement_totalYear" />

        <!-- TextView to show total value of the Year -->
        <TextView
            android:id="@+id/textView_MainActivity_totalValueYear"
            style="@style/general_WrapContent"
            android:textStyle="bold"
            android:text="TotalValueofYear" />
    </LinearLayout>

    <!-- Layout for theBottom -->
    <RelativeLayout
        style="@style/general_MatchParent"
        android:layout_weight="1"
        android:gravity="bottom">



    </RelativeLayout>
</LinearLayout>



