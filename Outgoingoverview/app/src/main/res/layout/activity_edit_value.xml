<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.EditValueActivity">

    <!-- Layout for the Items to edit -->
    <LinearLayout
        style="@style/general_MatchParent"
        android:orientation="vertical">

        <!-- TextView for Date -->
        <TextView
            android:id="@+id/textView_EditValueActivity_Date"
            style="@style/general_Top_MatchParent"
            android:text="Date" />

        <!-- EditText for Titel -->
        <EditText
            android:id="@+id/editText_EditValueActivity_Titel"
            style="@style/general_Middle_MatchParent"
            android:hint="Titel"
            android:inputType="text" />

        <!-- Layout for the Value -->
        <LinearLayout
            style="@style/general_Middle_MatchParent"
            android:orientation="horizontal">

            <!-- EditText for Value -->
            <EditText
                android:id="@+id/editText_EditValueActivity_Value"
                style="@style/general_WrapContent"
                android:layout_weight="1"
                android:hint="Value"
                android:inputType="numberDecimal" />

            <!-- TextView to show Currency -->
            <TextView
                android:id="@+id/textView_EditValueActivity_Currency"
                style="@style/general_WrapContent"
                android:text="Currency" />

        </LinearLayout>

        <!-- EditText for Description -->
        <EditText
            android:id="@+id/editText_EditValueActivity_Description"
            style="@style/general_Middle_MatchParent"
            android:hint="Description"
            android:inputType="text" />


    </LinearLayout>

    <!-- Layout for the Bottom -->
    <RelativeLayout
        style="@style/general_Bottom_MatchParent"
        android:layout_weight="1"
        android:gravity="bottom">

        <!-- Button to delet Item -->
        <Button
            android:id="@+id/button_edit_value_delet"
            style="@style/general_WrapContent"
            android:layout_alignParentStart="true"
            android:onClick="onClick_DeletItem"
            android:text="Delet" />

        <!-- Button to save values -->
        <Button
            android:id="@+id/button_edit_value_save"
            style="@style/general_WrapContent"
            android:layout_alignParentEnd="true"
            android:onClick="onClick_SaveNewValue"
            android:text="Save" />
    </RelativeLayout>
</LinearLayout>