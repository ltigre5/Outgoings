<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.EditRepeatedOutgoingsActivity">
    <!-- EditText for Titel -->
    <EditText
        android:id="@+id/editText_EditRepeatedOutgoingsActivity_Titel"
        style="@style/general_Top_MatchParent"
        android:hint="@string/hint_title"
        android:inputType="text" />

    <!-- Layout for Currency -->
    <LinearLayout style="@style/general_Middle_MatchParent">


        <!-- EditText Value -->
        <EditText
            android:id="@+id/editText_EditRepeatedOutgoingsActivity_Value"
            style="@style/general_WrapContent"
            android:inputType="numberDecimal"
            android:hint="@string/hint_value"
            android:layout_weight="1" />

        <!-- TextView to show Currency -->
        <TextView
            android:id="@+id/textView_EditRepeatedOutgoingsActivity_Currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <!-- EditText for Titel -->
    <EditText
        android:id="@+id/editText_EditRepeatedOutgoingsActivity_Description"
        style="@style/general_Middle_MatchParent"
        android:hint="@string/hint_description"
        android:inputType="textMultiLine" />

    <!-- Layout for Start and End Date -->
    <LinearLayout
        style="@style/general_Middle_MatchParent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <!-- Statment for Start: -->
        <TextView
            android:id="@+id/textView_EditRepeatedOutgoingsActivity_StartStatment"
            style="@style/general_WrapContent"
            android:text="@string/statment_start"
            app:autoSizeTextType="uniform" />

        <!-- Edittext for Start -->
        <EditText
            android:id="@+id/editText_EditRepeatedOutgoingsActivity_Start"
            style="@style/general_WrapContent"
            android:layout_weight="1"
            android:focusable="false" />

        <!-- Stament for End: -->
        <TextView
            android:id="@+id/textView_EditRepeatedOutgoingsActivity_EndStatment"
            style="@style/general_WrapContent"
            android:text="@string/statment_end"
            app:autoSizeTextType="uniform" />

        <!-- EditText for End -->
        <EditText
            android:id="@+id/editText_EditRepeatedOutgoingsActivity_End"
            style="@style/general_WrapContent"
            android:layout_weight="1"
            android:focusable="false" />
    </LinearLayout>

    <!-- Spinner for repeat every Year, Month, Week, Day -->
    <Spinner
        android:id="@+id/spinner_EditRepeatedOutgoingsActivity_RepeatBy"
        style="@style/general_Middle_MatchParent"
        android:entries="@array/repeated_arrays" />


    <!-- Layout for the Bottom -->
    <RelativeLayout
        style="@style/general_Bottom_MatchParent"
        android:layout_weight="1"
        android:gravity="bottom">

        <!-- Button for save repeated Outgoing -->
        <Button
            android:id="@+id/button_EditRepeatedOutgoingsActivity_Save"
            style="@style/general_WrapContent"
            android:layout_alignParentEnd="true"
            android:onClick="onClick_SaveReapeatedValues"
            android:text="@string/button_save" />

        <Button
            android:id="@+id/button_EditRepeatedOutgoingsActivity_Delet"
            style="@style/general_WrapContent"
            android:layout_alignParentStart="true"
            android:onClick="onClick_DeletReapeatedValuees"
            android:text="@string/button_delet"/>



    </RelativeLayout>
</LinearLayout>