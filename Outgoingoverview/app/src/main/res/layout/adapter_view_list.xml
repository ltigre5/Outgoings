<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_adapter_view_list_titel"
        style="@style/TextViewsAdapterViewListTitel"
        android:text="description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_adapter_view_list_DATE"
            style="@style/TextViewsAdapterViewListItems"
            android:text="Date" />

        <TextView
            android:id="@+id/textView_adapter_view_list_VALUE"
            style="@style/TextViewsAdapterViewListItems"
            android:text="Value" />
        />
    </LinearLayout>
</LinearLayout>
