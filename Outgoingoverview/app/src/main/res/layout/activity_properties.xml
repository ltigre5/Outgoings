<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.PropertiesActivity">

    <TextView
        android:id="@+id/textView_Properties_CurrencyStatment"
        style="@style/TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_Properties_Currency"
        style="@style/TextViews"
        android:hint="3-Letter Code"
        android:inputType="text"
        android:maxLength="3"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_Properties_CurrencyStatment"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button_AddNewItemActivity_SaveValue"
        style="@style/Buttons"
        android:onClick="onClick_SaveItem"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>