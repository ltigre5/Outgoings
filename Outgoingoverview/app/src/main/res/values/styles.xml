<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#505050</item>
        <item name="colorPrimaryDark">#3C3C3C</item>
        <item name="colorAccent">#030083</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- general Styles for wrapContent-->
    <style name="general_WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="general_Middle_WrapContent" parent="general_WrapContent">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="general_Top_WrapContent" parent="general_Middle_WrapContent">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="general_Bottom_WrapContent" parent="general_Middle_WrapContent">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- general Styles for MatchParent-->
    <style name="general_MatchParent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="general_Middle_MatchParent" parent="general_MatchParent">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="general_Top_MatchParent" parent="general_Middle_MatchParent">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="general_Bottom_MatchParent" parent="general_Middle_MatchParent">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- general Styles for Margin-->
    <style name="general_Margin">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="general_Middle_Margin">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="general_Margin_0">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="button_Color_Chooser">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- general Styles for Buttons-->
    <style name="button_WrapContent" parent="general_WrapContent">
        <item name="android:textColor">@android:color/white</item>
    <item name="android:background">@drawable/custom_button</item>
    </style>

    <!-- general Styles for Buttons-->
    <style name="button_Middle_MatchParent" parent="general_Middle_MatchParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

</resources>
