<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Buttons -->
    <style name="Buttons">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonsMain" parent="Buttons">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <!-- TextViews -->
    <style name="TextViews">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Main Statments -->
    <style name="TextViewsMainStatments" parent="TextViews">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <!-- Main EditText -->
    <style name="TextViewsMainEditText" parent="TextViews">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <!-- ViewList Titels -->
    <style name="TextViewsAdapterViewListTitel" parent="TextViews">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- ViewList Items -->
    <style name="TextViewsAdapterViewListItems" parent="TextViews">
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Outgoings of selected Month Statments -->
    <style name="TextViewsOutgoingsOfSelectedMonthStatments" parent="TextViews">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- TextViews Outgoings of selected Month -->
    <style name="TextViewsOutgoingsOfSelectedMonth" parent="TextViews">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
